
 <form class="form-horizontal" role="form"> 
 <%= form_for(@event) do |f| %>
     <% if @event.errors.any? %>
       <div id="error_explanation">
         <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>
 
         <ul>
         <% @event.errors.full_messages.each do |msg| %>
           <li><%= msg %></li>
         <% end %>
         </ul>
       </div>
     <% end %>
 
     <div class="field control-group">
       <h5>Event title</h5>
       <%= text_area( :event, :name) %>
     </div>
 
     <div class="field control-group">
       <h5>Your name</h5>
       <%= text_area(:event, :host) %>
     </div>
 
     <div class="field control-group">
       <h5>Event Date</h5>
       <%= date_field(:event, :date) %>
     </div>
 
     <div class="field control-group">
       <h5>Question 1 (e.g. "What do you hope will happen at this event?")</h5>
       <%= text_area(:event, :question_1) %>
     </div>
 
     <div class="field control-group">
       <h5>Question 2 (e.g. "What do you want to do at this event?")</h5>
       <%= text_area(:event, :question_2) %>
     </div>
 
     <div class="field control-group">
       <h5>Question 3 (e.g. "Ask me about...")</h5>
       <%= text_area(:event, :question_3) %>
     </div>
     <br>
 
     <div class="actions">
       <%= f.submit ({:class => "btn btn primary"}) %>
     </div>
   <% end %>
 
 </form>