    <div class="container">

      <div class="row">
      
        <div class="col-lg-12">
          <h1 class="page-header"><% @event.name %></h1>
        </div>
        <% @event.users.each do |user| %>
        <div class="col-lg-3 col-md-4 col-xs-6">
	        <div class="thumbnail">
		        <div class="caption">
		          <h4><%= user.first_name %></h4>
		          <p><%= user.answers.last.response %></p>
		          <p><a href="<%= user.facebook_profile_link %>" class="label label-danger" rel="tooltip" title="Message">Message</a></p>
		        </div>
	          <img src="<%= user.image %>">
	        </div>
        </div>
        <% end %>
      </div>
      
      <hr>


      
